<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_su">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imgg"
        android:layout_margin="20dp"
        android:src="@drawable/uv"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgg"
        android:text=" جامعة المنيا"
        android:textSize="25sp"
        android:id="@+id/textt"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingEnd="110dp"


        />

      <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layout_constraintTop_toBottomOf="@id/textt"
          >

          <Button
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:background="@drawable/button_bg"
              app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="200dp"
              android:layout_marginStart="5dp"
                android:text="نتائج الطلاب"
                android:textColor="@color/white"
              android:textSize="25sp"
              android:id="@+id/std_se1"


              />
          <Button
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:background="@drawable/button_bg"
              app:layout_constraintStart_toEndOf="@id/std_se1"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="200dp"
              android:layout_marginStart="5dp"
              android:text="الجداول الدراسية"
              android:textColor="@color/white"
              android:textSize="25sp"
              android:id="@+id/std_se2"


              />

          <Button
              android:id="@+id/std_se3"
              android:layout_width="162dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/std_se2"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="200dp"
              android:background="@drawable/button_bg"
              android:text="قطاع شئون الطلاب"
              android:textColor="@color/white"
              android:textSize="25sp"
              android:layout_marginStart="5dp"


              />

          <Button
              android:id="@+id/std_se4"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/std_se1"
              android:layout_marginTop="38dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="5dp"
              android:background="@drawable/button_bg"
              android:text="دليل الطلاب"
              android:textColor="@color/white"
              android:textSize="25sp"


              />

          <Button
              android:id="@+id/std_se5"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/std_se4"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="300dp"
              android:layout_marginStart="10dp"
              android:background="@drawable/button_bg"
              android:text="برامج الجامعة"
              android:textColor="@color/white"
              android:textSize="25sp"


              />

          <Button
              android:id="@+id/std_se6"
              android:layout_width="150dp"
              android:layout_height="80dp"
              app:layout_constraintStart_toEndOf="@id/std_se5"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginStart="8dp"
              android:layout_marginTop="290dp"
              android:background="@drawable/button_bg"
              android:text="بوابة المقرارات"
              android:paddingEnd="10dp"
              android:textColor="@color/white"
              android:textSize="25sp"


              />

          <Button
              android:id="@+id/std_se7"
              android:layout_width="200dp"
              android:layout_height="80dp"

             app:layout_constraintTop_toBottomOf="@id/std_se4"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="30dp"
              android:background="@drawable/button_bg"
              android:text="نائب قطاع شئون الطلاب"
              android:textColor="@color/white"
              android:textSize="25sp"


              />

      </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>