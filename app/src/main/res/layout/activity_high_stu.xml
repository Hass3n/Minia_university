<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".High_stu">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imgg"
        android:layout_margin="20dp"
        android:src="@drawable/uv"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgg"
        android:text=" جامعة المنيا"
        android:textSize="25sp"
        android:id="@+id/textt"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingEnd="110dp"

        />



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintTop_toBottomOf="@id/textt"


            >

            <Button
                android:id="@+id/high_se1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="195dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/button_bg"
                android:text="التقدم للدراسات العليا"
                android:textColor="@color/white"
                android:textSize="25sp"


                />

            <Button
                android:id="@+id/high_se2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/high_se1"
                android:layout_marginTop="195dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/button_bg"
                android:text="اخبار الدراسات العليا"
                android:textColor="@color/white"
                android:textSize="25sp"


                />


            <Button
                android:id="@+id/high_se4"
                android:layout_width="110dp"
                android:layout_height="98dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/high_se2"
                android:layout_marginTop="190dp"
                android:background="@drawable/button_bg"
                android:text="المقرارات الدراسية"
                android:layout_marginStart="1dp"
                android:textColor="@color/white"
                android:textSize="25sp"



                />

            <Button
                android:id="@+id/high_se3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintTop_toBottomOf="@id/high_se1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_bg"
                android:text="ابحاث"
                android:textColor="@color/white"
                android:textSize="25sp"



                />

            <Button
                android:id="@+id/high_se5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                 app:layout_constraintTop_toBottomOf="@id/high_se2"
                app:layout_constraintStart_toEndOf="@id/high_se3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_bg"
                android:text="نائب القطاع"
                android:textColor="@color/white"
                android:textSize="25sp"



                />

            <Button
                android:id="@+id/high_se6"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:layout_constraintTop_toBottomOf="@id/high_se4"
                app:layout_constraintStart_toEndOf="@id/high_se5"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_bg"
                android:text="بنك المعرفة"
                android:paddingEnd="8dp"
                android:textColor="@color/white"
                android:textSize="25sp"



                />
            <Button
                android:id="@+id/high_se7"
                android:layout_width="110dp"
                android:layout_height="110dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/high_se5"
                android:layout_marginTop="10dp"

                android:background="@drawable/button_bg"
                android:text="الاستعلام عن الرسائل"
                android:textColor="@color/white"
                android:textSize="25sp"



                />



        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>